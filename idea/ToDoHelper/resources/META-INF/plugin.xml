<idea-plugin url="https://github.com/YaoXuanZhi/TodoTaskPlugin">
  <id>yaoxuanzhi.todoList</id>
  <name>ToDo Helper</name>
  <version>1.0</version>
  <vendor email="yaoxuanzhi@outlook.com" url="https://github.com/YaoXuanZhi/TodoTaskPlugin">耀轩之</vendor>

  <description><![CDATA[
    <p>This is a simple plugin for the todo-workflow.</p>
    <p>
    Feel free to file new feature requests as an issue on <a href="https://github.com/YaoXuanZhi/TodoTaskPlugin/issues">GitHub</a>, just like a bug.
    </p>
    <p>
        <a href="https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&amp;hosted_button_id=C344TC8DDC5UN" rel="nofollow">Donate</a> to support the project.
    </p>
    ]]>
  </description>

  <change-notes><![CDATA[
              <ul>
              <li>first release</li>
            </ul>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <!--<idea-version since-build="173.0" />-->
  <idea-version since-build="162"/>

  <depends>com.intellij.modules.lang</depends>

  <!--<extensions defaultExtensionNs="com.intellij">-->
    <!--&lt;!&ndash; Add your extensions here &ndash;&gt;-->
      <!--<applicationConfigurable groupId="tools" instance=""/>-->
  <!--</extensions>-->

  <actions>
      <group id="com.yaoxuanzhi.todo.TodoTask" description = "todo task command">
        <action id="open" class="com.yaoxuanzhi.todo.OpenTask" text="open task" description="添加任务">
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt I"/>
        </action>
        <action id="done" class="com.yaoxuanzhi.todo.DoneTask" text="done task" description="完成任务">
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt K"/>
        </action>
        <action id="doing" class="com.yaoxuanzhi.todo.HandTask" text="doing  tasks" description="处理任务">
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt J"/>
        </action>
        <action id="cancel" class="com.yaoxuanzhi.todo.CancelTask" text="cancel task" description="取消任务">
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt L"/>
        </action>
        <action id="run_lua_code" class="com.yaoxuanzhi.extend.RunLua" text="运行Lua脚本" description="执行脚本">
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt P"/>
        </action>
      </group>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
      <applicationConfigurable groupId="tools" instance="com.yaoxuanzhi.view.ToDoTaskView"/>
    <!-- T.O.D.O -->
    <applicationConfigurable groupId="tools" instance="com.yaoxuanzhi.todo_ui.TodoConfigurablePlus" id="preferences.toDoOptionsEx" key="title.todo"
                             bundle="com.yaoxuanzhi.message.IdeBundlePlus"/>
    <applicationService serviceImplementation="com.yaoxuanzhi.model.ToDoTaskModel"/>
  </extensions>

</idea-plugin>